                    </MudPaper>
                </MudItem>
                <MudItem sm="10" md="10" lg="5"  >
                    <MudPaper Height="150px" Width="100%" Style="background-color:#8980FF" Class="pa-2 ">
                        <MudText Align="Align.Center" style="color:white" Typo="Typo.h5">Tổng doanh thu theo ngày</MudText>
                        <MudText Align="Align.Center" style="color:white" Typo="Typo.h2">250.000.000</MudText>
                        <MudText Align="Align.Center"> <MudLink Underline="Underline.Always" Style="text-align:center" Typo="Typo.h5">Xem chi tiết</MudLink> </MudText>
                    </MudPaper>
                </MudItem>
                <MudItem sm="10" md="10" lg="5" >
                    <MudPaper Height="150px" Width="100%"  Style="background-color:#8980FF" Class="pa-2 ">
