                    </MudPaper>
                </MudItem>
                <MudItem sm="10" md="10" lg="5" >
                    <MudPaper Height="150px" Width="100%"  Style="background-color:#8980FF" Class="pa-2 ">
                        <MudText Align="Align.Center" style="color:white" Typo="Typo.h5">Tổng số lượng người sử dụng</MudText>
                        <MudText Align="Align.Center" style="color:white" Typo="Typo.h2">10.000</MudText>
