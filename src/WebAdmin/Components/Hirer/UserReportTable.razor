@namespace WebAdmin.Components
@using WebAdmin.Shared.Models.Report
@inject NavigationManager Navigation

<MudGrid>
    <MudItem xs="12" sm="9">
        <MudTable ServerData="@(new Func<TableState, Task<TableData<ReportSummary>>>(ServerReloadAsync))"
                   Hover="true" @ref="_table" FixedHeader="true"
                  Height="400px" Striped="true" >            
            <HeaderContent>
                <MudTh><MudTableSortLabel SortLabel="sign_field" T="ReportSummary">Nội dung báo cáo</MudTableSortLabel></MudTh>
                <MudTh><MudTableSortLabel SortLabel="sign_field" T="ReportSummary">Ngày báo cáo</MudTableSortLabel></MudTh>
                @*<MudTh><MudTableSortLabel SortLabel="name_field" T="ReportSummary">Trạng thái</MudTableSortLabel></MudTh>*@
                <MudTh><MudTableSortLabel SortLabel="position_field" T="ReportSummary">Actions</MudTableSortLabel></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Người báo cáo">@context.ReportMessage</MudTd>
                <MudTd DataLabel="Ngày báo cáo"> @context.CreatedDate</MudTd>
                @*<MudTd DataLabel="Trạng thái">@context.</MudTd>*@
                <MudTd DataLabel="Actions">                
                    <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
                        <MudIconButton Icon="@Icons.Material.Filled.Preview" Color="Color.Success"
                                   OnClick="async () => await OnViewClicked.InvokeAsync(context)" />                        
                    </MudButtonGroup>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudItem>
    <MudItem xs="12" sm="3">
        <MudPaper>
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6" Align="Align.Center">Bộ lọc lịch sử</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>                    
                    <MudDatePicker Label="Từ ngày" @bind-Date="_fromDate" Editable="true" Mask="@(new DateMask("dd.MM.yyyy"))" DateFormat="dd.MM.yyyy" />
                    <MudDatePicker Label="Đến ngày" @bind-Date="_toDate" DateFormat="dd.MM.yyyy" Editable="true" Mask="@(new DateMask("dd.MM.yyyy"))" />
                    <MudSelect Label="Trạng thái" AnchorOrigin="Origin.BottomCenter" @bind-Value="_isApprove">
                        @*<MudSelectItem Value='null'>----</MudSelectItem>*@
                        <MudSelectItem Value='true'>Đã duyệt</MudSelectItem>
                        <MudSelectItem Value='false'>Chưa duyệt</MudSelectItem>
                    </MudSelect>
                </MudCardContent>
                <MudCardActions>
                    <MudButton FullWidth="true" OnClick="() => OnSearch(_isApprove,_fromDate,_toDate)" Variant="Variant.Filled" Color="Color.Primary" Disabled="_isBusy">Áp dụng</MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudItem>
</MudGrid>
