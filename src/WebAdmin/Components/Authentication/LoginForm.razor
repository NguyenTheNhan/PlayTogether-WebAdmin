@namespace WebAdmin.Components

<EditForm Model="_model" OnValidSubmit="LoginUserAsync" >
     <DataAnnotationsValidator />

    <MudCard Outlined="true" >
        <MudCardHeader >
            <CardHeaderContent >
                <MudText Typo="Typo.h6" Align="Align.Center">Đăng nhập</MudText>        
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" @bind-Value="@_model.Email" />
            <MudTextField InputType="@(isViewPassword ? InputType.Text : InputType.Password)" Label="Mật khẩu"  @bind-Value="@_model.Password" />
            <MudCheckBox @bind-Checked="@isViewPassword" Label="Hiện mật khẩu" Color="Color.Primary"></MudCheckBox>
            <ValidationSummary />

            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="my-2" Variant="Variant.Filled">@_errorMessage</MudAlert>
            }
        </MudCardContent>

        <MudCardActions>
            <MudButton FullWidth="true" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_isBusy" >Đăng nhập</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>



