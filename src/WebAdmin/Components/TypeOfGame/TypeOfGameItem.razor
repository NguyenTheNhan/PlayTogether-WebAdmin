@namespace WebAdmin.Components

<MudPaper Elevation="1" Class="mt-2 px-3">

    <div class=" d-flex flex-row align-center">

        <MudText Typo="Typo.body1"
                 Class="flex-grow-1 flex-shrink-0 mr-2">
                 @Item.GameType.ShortName
        </MudText>


        @if (_isBusy)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Class="flex-grow-0 flex-shrink-0 mr-2" />
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" Color="Color.Error" Class="flex-grow-0 flex-shrink-0 mr-2"
                       OnClick="RemoveItemAsync" />
        }


    </div>
</MudPaper>